<p id="notice"><%= notice %></p>

<h1>Public Post Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_post_comments.each do |public_post_comment| %>
      <tr>
        <td><%= link_to 'Show', public_post_comment %></td>
        <td><%= link_to 'Edit', edit_public_post_comment_path(public_post_comment) %></td>
        <td><%= link_to 'Destroy', public_post_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

