<h1>Public Customers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @public_customers.each do |public_customer| %>
      <tr>
        <td><%= link_to 'Show', public_customer %></td>
        <td><%= link_to 'Edit', edit_public_customer_path(public_customer) %></td>
        <td><%= link_to 'Destroy', public_customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

