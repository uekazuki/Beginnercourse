<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_customer.get_image %>
      <%= form_with model: current_customer, url: customers_path do |f| %>
        <h4>name</h4>
        <%= f.text_field :name %>
        <h4>introduction</h4>
        <%= f.text_area :introduction %>
        <%= f.submit 'update' %>
      <% end %>
    </div>
    </div>
  </div>
</main>