<main>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%#= image_tag @public_customer.get_profile_image(100,100) %>
      <%= form_with model: current_customer, url: customers_path do |f| %>
        <h4>name</h4>
        <%= f.text_field :name %>
        <h4>introduction</h4>
        <%= f.text_area :introduction %>
        <%= f.submit 'update' %>
      <% end %>

      <%= link_to edit_customers_path(@customer), class:"btn btn-outline-secondary btn-block" do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
      <h2 class="mt-3">New post</h2>
      <%= form_with model: Post.new do |f| %>
        <h4>Title</h4>
        <%= f.text_field :product_name %>
        <h4>Opinion</h4>
        <%= f.text_area :content %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    </div>
  </div>
</main>